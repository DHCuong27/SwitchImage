<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:gravity="center"
    tools:context=".MainActivity">

    <!-- Tiêu đề ứng dụng -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Gallery"
        android:textSize="32sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp" />

    <!-- Tiêu đề hình ảnh -->
    <TextView
        android:id="@+id/tvImageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Title"
        android:textSize="20sp"
        android:textColor="#FF9800"
        android:textStyle="bold"
        android:layout_marginBottom="10dp" />

    <!-- Container cho hình ảnh - ĐÃ LOẠI BỎ BACKGROUND -->
    <FrameLayout
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Gallery Image"
            android:clickable="true"
            android:focusable="true" />

    </FrameLayout>

    <!-- Bộ đếm hình ảnh -->
    <TextView
        android:id="@+id/tvImageCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/3"
        android:textSize="18sp"
        android:textColor="#BDBDBD"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp" />

    <!-- Layout chứa nút điều hướng -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="40dp">

        <!-- Nút Back -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="⬅️ Previous"
            android:textSize="16sp"
            android:background="@drawable/natural1"
            android:textColor="@android:color/white"
            android:layout_margin="8dp"
            android:elevation="4dp" />

        <!-- Nút Next -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="Next ➡️"
            android:textSize="16sp"
            android:background="@drawable/bridge"
            android:textColor="@android:color/white"
            android:layout_margin="8dp"
            android:elevation="4dp" />

    </LinearLayout>



</LinearLayout>